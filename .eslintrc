{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "eqeqeq": "error",
    "dot-location": ["error", "property"],
    "dot-notation": "error",
    "indent": [
      "error",
      2
    ]
  },
  "globals": {
    "it": true,
    "beforeEach": true,
    "beforeAll": true,
    "require": true,
    "setInterval": true,
    "clearInterval": true,
    "console": true,
    "describe": true,
    "expect": true,
    "Set": true,
    "requestAnimationFrame": true
  },
  "plugins": [
    "react"
  ]
}
